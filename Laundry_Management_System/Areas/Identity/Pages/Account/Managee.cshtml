@page
@model ManageeModel

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <h3>Name: @Model.FirstName @Model.LastName</h3>
            <h3>Username: @Model.UserName</h3>
            <h3>Email: @Model.Email</h3>
            <h3>Balance: $@Model.UserBalance</h3>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-md-6">
            <h4>Edit Profile</h4>
            <a asp-page="EditProfile" class="btn btn-primary">Edit Profile</a>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-md-6">
            <h4>Reset Password</h4>
            <a asp-page="ForgotPassword" class="btn btn-primary">Reset Password</a>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-md-6">
            <h4>Add EWallet</h4>
            <form asp-page-handler="AddEWallet" method="post">
                <div class="form-group">
                    <label asp-for="EWallet.CardNumber">Card Number (Must be a 6-digit card number)</label>
                    <input asp-for="EWallet.CardNumber" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="EWallet.Balance">Balance (must be between 1 - 100)</label>
                    <input asp-for="EWallet.Balance" class="form-control" />
                </div>
                <button type="submit" class="btn btn-primary">Add EWallet</button>
            </form>
        </div>
    </div>
</div>
<br />
<div class="container mt-3">
    <div class="row">
        <div class="col-md-6">
            <a href="/Identity/Account/RemoveEWallet" class="btn btn-danger">Remove EWallet</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
