@page
@model ForgotPasswordModel

<h1>Edit Profile</h1>

<form method="post">
    <h5>Old Password</h5>
    <div class="form-group">
        <input asp-for="OldPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder=" Old Password" />
        <label asp-for="OldPassword">. </label>
        <span asp-validation-for="OldPassword" class="text-danger"></span>
    </div>
    <br />
    <h5>New Password</h5>
      
    <div class="form-group">
        <input asp-for="NewPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder=" New Password" />
        <label asp-for="NewPassword">. </label>
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
