@page
@model RemoveEWalletModel

@{
    ViewData["Title"] = "Remove eWallet";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-10">
        <section>
            <form method="post">
                <h2>Remove eWallet</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="form-group">
                    <p>Are you sure you want to remove your eWallet? This action cannot be undone.</p>
                </div>

                <div class="form-group">
                    <button id="remove-ewallet" type="submit" class="w-100 btn btn-lg btn-danger">Remove eWallet</button>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
